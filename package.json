{
  "name": "@anilkumarthakur/vue3-recaptcha",
  "description": "A Vue 3 plugin for Google reCAPTCHA v2 (checkbox & invisible) and v3 integration",
  "version": "0.0.10",
  "private": false,
  "type": "module",
  "license": "MIT",
  "author": "Anil Kumar Thakur",
  "repository": {
    "type": "git",
    "url": "https://github.com/anilkumarthakur60/vue3-recaptcha.git"
  },
  "bugs": {
    "url": "https://github.com/anilkumarthakur60/vue3-recaptcha/issues"
  },
  "homepage": "https://github.com/anilkumarthakur60/vue3-recaptcha#readme",
  "keywords": [
    "recaptcha",
    "google-recaptcha",
    "recaptcha-v2",
    "recaptcha-v3",
    "vue",
    "vue3",
    "vue3-recaptcha",
    "captcha",
    "verification",
    "security",
    "typescript"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": false
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.15.0",
    "@tsconfig/node20": "^20.1.8",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.9",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "axios": "^1.13.2",
    "cypress": "^15.9.0",
    "eslint": "^9.39.2",
    "eslint-plugin-cypress": "^5.2.1",
    "eslint-plugin-vue": "^10.7.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "pinia": "^3.0.4",
    "prettier": "^3.8.0",
    "sass-embedded": "^1.97.2",
    "start-server-and-test": "^2.1.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.17",
    "vue": "^3.4.29",
    "vue-router": "^5.0.2",
    "vue-tsc": "^3.2.2"
  },
  "scripts": {
    "dev": "vite --config vite.config.prod.ts",
    "build": "vue-tsc --noEmit && vite build",
    "build:prod": "vue-tsc && vite build --config vite.config.prod.ts",
    "preview": "vite preview",
    "test:unit": "vitest run src/package --no-coverage 2>/dev/null || true",
    "test:e2e": "start-server-and-test preview http://localhost:4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' http://localhost:4173 'cypress open --e2e'",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint src/package --ext .vue,.js,.jsx,.ts,.tsx --fix 2>/dev/null || true",
    "format": "prettier --write \"src/package/**/*.{vue,ts,tsx,js,jsx,json,css}\"",
    "test": "jest --coverage",
    "prepublishOnly": "npm run build",
    "version": "npm run format && git add -A"
  }
}
